<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Hakukenttä ja hakupainike rivissä ylimpänä -->
    <LinearLayout
        android:id="@+id/searchLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/editSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/search_hint"
            android:inputType="text"
            android:maxLines="1" />

        <Button
            android:id="@+id/buttonSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Etsi"
            android:backgroundTint="#2196F3" />
    </LinearLayout>

    <!-- Paikan nimi/info syöttökenttä -->
    <EditText
        android:id="@+id/editPlaceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/place_name_hint"
        android:inputType="text"
        android:maxLines="1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/searchLayout" />

    <!-- Leveysaste-näyttökenttä (vain luku) -->
    <EditText
        android:id="@+id/editLatitude"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/latitude_hint"
        android:inputType="none"
        android:focusable="false"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintTop_toBottomOf="@+id/editPlaceName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/editLongitude" />

    <!-- Pituusaste-näyttökenttä (vain luku) -->
    <EditText
        android:id="@+id/editLongitude"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/longitude_hint"
        android:inputType="none"
        android:focusable="false"
        android:layout_marginTop="8dp"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toBottomOf="@+id/editPlaceName"
        app:layout_constraintStart_toEndOf="@+id/editLatitude"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tallenna-painike -->
    <Button
        android:id="@+id/buttonSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save_button"
        android:backgroundTint="#2196F3"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/editLatitude" />

</androidx.constraintlayout.widget.ConstraintLayout>